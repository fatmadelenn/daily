<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/the_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/sariyildiz"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_above="@+id/TextIcerik"
            android:layout_alignStart="@+id/buttonSil"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="33dp"
            android:background="@drawable/yildiz"
            android:backgroundTint="@android:color/holo_blue_light"
            android:visibility="gone" />

        <Button
            android:id="@+id/yildiz"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/TextIcerik"
            android:layout_alignStart="@+id/buttonSil"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="33dp"
            android:background="@drawable/yildiz" />

        <TextView
            android:id="@+id/TextIcerik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TextKonu"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:ems="10" />

        <TextView
            android:id="@+id/textViewTarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TextKonu"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/TextKonu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/TextIcerik"
            android:layout_marginRight="30dp"
            android:layout_marginTop="110dp"
            android:ems="10" />

        <Button
            android:id="@+id/buttonSil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Sil" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
